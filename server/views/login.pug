doctype html
head
  title Login
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  // Bootstrap CSS
  link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css' integrity='sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb' crossorigin='anonymous')
.jumbotron.jumbotron-fluid
  .container
    .row
      .col-12.col-sm-8.col-md-6.col-lg-4.offset-sm-4.offset-sd-3.offset-lg-4
        h1.mb-3.text-center Please log in
        form(action="/api/v1/admin/login", method="post")
            .form-group
              label(for='username') Username:
              input#username.form-control(type='text' placeholder='jhon' required='')
            .form-group
              label(for='password') Password:
              input#password.form-control(type='password' required='')
            button.btn.btn-primary.btn-block(type='submit') Login
            .text-center
              p OR
              a.btn.btn-success(href='/') Create account
              p.small
                a(href='#') Have you forgotten your account details?

